<div class="panel panel-primary list-group">
    <div class="list-group-item active">
        Grupy Kontaktów
    </div>

    {% for contactGroup in contactGroups %}
        <div class="list-group-item">
            {{ contactGroup.groupName }}

            <div class="pull-right">
                <a href="{{ path('modifyContactGroupForm', {id: contactGroup.id}) }}"
                   class="glyphicon glyphicon-edit"></a>
                <a href="{{ path('deleteContactGroup', {id: contactGroup.id}) }}"
                   class="glyphicon glyphicon-remove"></a>
            </div>
            <br><br>
            {% if contactGroup.persons != null %}
                <ul>
                    {% for person in contactGroup.persons %}
                        <li><a href="{{ path('show', {id: person.id}) }}">
                                <small>{{ person.name }} {{ person.surname }}</small></a></li>
                    {% endfor %}
                </ul>
            {% endif %}

        </div>
    {% else %}
        <div class="list-group-item">
            sorawa - nie ma persons
        </div>
    {% endfor %}


    <div class="panel-footer"><a href="{{ path('newContactGroupForm') }}">
            <span class="glyphicon glyphicon-plus"></span> doodaj nową grupę</a></div>
</div>