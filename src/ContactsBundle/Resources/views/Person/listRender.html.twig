<div class="panel panel-primary list-group">
    <div class="list-group-item active">
        Książka adresowa
    </div>

    {% for person in persons %}
        <div class="list-group-item">
            <a href="{{ path('show', {id: person.id}) }}">{{ person.name }} {{ person.surname }}</a>
            <div class="pull-right">
                <a href="{{ path('modifyForm', {id: person.id}) }}" class="glyphicon glyphicon-edit"></a>
                <a href="{{ path('delete', {id: person.id}) }}" class="glyphicon glyphicon-remove"></a>
            </div>
            <br><br>
            {% if person.contactGroups != null %}
                {% for group in person.contactGroups %}
                    <span class="label label-info"><small>{{ group.groupName }}</small></span>
                {% endfor %}
            {% endif %}

        </div>
    {% else %}
        <div class="list-group-item">
            sorawa - nie ma persons
        </div>
    {% endfor %}


    <div class="panel-footer"><a href="{{ path('newForm') }}">
            <span class="glyphicon glyphicon-plus"></span> doodaj nową osobę do książki</a></div>
</div>